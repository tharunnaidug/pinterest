<% include ./partials/header.ejs %>
<div class="show w-full min-h-screen bg-zinc-700 text-white pt-1">
    <nav class="flex flex-row justify-between">
        <h2 class="px-8 ml-6 text-xl py-1">Pinterest</h2>
        <a class="px-8  text-xs py-3 bg-zinc-500 rounded-full mt-3 mr-8" href="/profile">Profile</a>
        <a class="px-7 text-xs py-3 bg-red-500 rounded-full mt-3 mr-4" href="/logout">Logout</a>
    </nav>
    <div class="cards flex flex-wrap gap-4 px-10 mx-4 mt-3">
        <% post.forEach(function(elem){ %>

            <div class="w-32 card">
                <div class=" w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.img %>" alt="">

                </div>
                <a href="feed/<%= elem.img %>" class="mt-2 text-sm "><%= elem.title %></a>
                <h6 class=" text-sm cursor-default">@<%= elem.user.username %></h6>
            </div>
            <%  }) %>
    </div>
</div>
    <% include ./partials/footer.ejs %>