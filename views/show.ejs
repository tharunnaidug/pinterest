<% include ./partials/header.ejs %>
<div class="show w-full min-h-screen bg-zinc-700 text-white pt-1">
    <% include ./partials/nav.ejs %>
    <div class="cards flex flex-wrap gap-4 px-10 mx-4" id="con">
        <% user.posts.forEach(function(elem){ %>

            <div class="w-32 card">
                <div class=" w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.img %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %>></h5>
            </div>
            <%  }) %>
    </div>
</div>
<script>
    let user = `<%=user.posts.length%>`
    const con=document.getElementById(`con`)
    console.log(user)
    if(user==0){
         con.innerText="You have No pins..."
    }
</script>
